{
  "name": "ERPNext Codespaces",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    },
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/python:1": { "version": "3.11" },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "forwardPorts": [8080, 8000, 9000, 3306],
  "portsAttributes": {
    "8080": { "label": "ERPNext Frontend", "onAutoForward": "openBrowser" },
    "8000": { "label": "Frappe Backend" },
    "9000": { "label": "Socket.IO" },
    "3306": { "label": "MariaDB" }
  },
  "postCreateCommand": "sudo chmod a+rw /var/run/docker.sock || true"
}
